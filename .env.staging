# Forex Prediction System - Staging Environment
# ==============================================

# Environment Config
NODE_ENV=staging
ENVIRONMENT=staging

# FastAPI Settings
SECRET_KEY=forex-staging-secret-key-2024-ultra-secure-stg
API_V1_STR=/api/v1
PROJECT_NAME="Forex Prediction System (Staging)"
DEBUG=False

# Server Settings (Cloud Run defaults)
API_PORT=8080
FRONTEND_PORT=443

# Database (Staging PostgreSQL - Cloud SQL or Neon)
DATABASE_URL=postgresql://forex_user:staging_password@staging-db.example.com/forex_prediction_staging?sslmode=require
POSTGRES_USER=forex_user
POSTGRES_PASSWORD=staging_password
POSTGRES_DB=forex_prediction_staging
POSTGRES_PORT=5432

# Redis (Cloud Redis)
REDIS_URL=redis://staging-redis.example.com:6379/0
REDIS_PORT=6379

# CORS Settings
CORS_ORIGINS=["https://forex-prediction-staging.vercel.app"]

# Data Sources (No API Keys Required)
# Primary: Bank of Japan CSV
BOJ_DATA_URL=https://www.boj.or.jp/statistics/market/forex/fxdaily/index.htm/
# Secondary: Yahoo Finance Scraping
YAHOO_FINANCE_URL=https://finance.yahoo.com/quote/USDJPY=X/
# Tertiary: Alpha Vantage (Optional)
ALPHA_VANTAGE_API_KEY=

# ML Model Settings
MODEL_PATH=/app/models/forex_predictor.pkl
MODEL_UPDATE_SCHEDULE="0 6 * * *"
PREDICTION_PERIODS=[7, 14, 21, 30]

# Notification Settings (Optional)
SENDGRID_API_KEY=
EMAIL_FROM=alerts@forex-prediction-staging.com
EMAIL_NOTIFICATIONS_ENABLED=False

# Feature Flags
ENABLE_BACKTEST=True
ENABLE_AUTO_TRADING=False
ENABLE_WEBSOCKET=True

# Logging
LOG_LEVEL=WARNING
LOG_FILE=/var/log/forex_prediction_staging.log

# Frontend URLs
VITE_API_URL=https://forex-api-staging.example.com
VITE_WS_URL=wss://forex-api-staging.example.com