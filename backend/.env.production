# Production Environment Variables
# ================================

# Database Configuration
DATABASE_URL=postgresql://forex_user:forex_pass@db:5432/forex_prediction_db
POSTGRES_USER=forex_user
POSTGRES_PASSWORD=forex_pass
POSTGRES_DB=forex_prediction_db

# API Configuration
API_PORT=8000
API_HOST=0.0.0.0
ENVIRONMENT=production
DEBUG=false

# Security
SECRET_KEY=your-production-secret-key-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# External APIs (Replace with actual API keys)
YAHOO_FINANCE_API_KEY=
ALPHA_VANTAGE_API_KEY=
FX_API_KEY=

# Redis Configuration (for caching)
REDIS_URL=redis://redis:6379/0

# Logging
LOG_LEVEL=INFO
LOG_FILE=/app/logs/forex_prediction.log

# CORS Settings
CORS_ORIGINS=["https://your-production-domain.com"]

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# Data Collection
COLLECT_DATA_ON_STARTUP=false
DATA_COLLECTION_INTERVAL_HOURS=1

# Monitoring
SENTRY_DSN=
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090