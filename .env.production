# Forex Prediction System - Production Environment
# ================================================

# Environment Config
NODE_ENV=production
ENVIRONMENT=production

# FastAPI Settings
SECRET_KEY=forex-production-secret-key-2024-maximum-security-prod
API_V1_STR=/api/v1
PROJECT_NAME="Forex Prediction System"
DEBUG=False

# Server Settings (Cloud Run defaults)
API_PORT=8080
FRONTEND_PORT=443

# Database (Production PostgreSQL - Cloud SQL or Neon)
DATABASE_URL=postgresql://forex_user:production_password@production-db.example.com/forex_prediction_production?sslmode=require
POSTGRES_USER=forex_user
POSTGRES_PASSWORD=production_password
POSTGRES_DB=forex_prediction_production
POSTGRES_PORT=5432

# Redis (Cloud Redis with High Availability)
REDIS_URL=redis://production-redis.example.com:6379/0
REDIS_PORT=6379

# CORS Settings
CORS_ORIGINS=["https://forex-prediction.vercel.app", "https://forex.yourdomain.com"]

# Data Sources (No API Keys Required)
# Primary: Bank of Japan CSV
BOJ_DATA_URL=https://www.boj.or.jp/statistics/market/forex/fxdaily/index.htm/
# Secondary: Yahoo Finance Scraping
YAHOO_FINANCE_URL=https://finance.yahoo.com/quote/USDJPY=X/
# Tertiary: Alpha Vantage (Optional - Add key if using)
ALPHA_VANTAGE_API_KEY=

# ML Model Settings
MODEL_PATH=/app/models/forex_predictor.pkl
MODEL_UPDATE_SCHEDULE="0 6 * * *"
PREDICTION_PERIODS=[7, 14, 21, 30]

# Notification Settings (Optional - Add keys if using)
SENDGRID_API_KEY=
EMAIL_FROM=alerts@forex-prediction.com
EMAIL_NOTIFICATIONS_ENABLED=False

# Feature Flags
ENABLE_BACKTEST=True
ENABLE_AUTO_TRADING=False
ENABLE_WEBSOCKET=True

# Logging
LOG_LEVEL=ERROR
LOG_FILE=/var/log/forex_prediction.log

# Frontend URLs
VITE_API_URL=https://api.forex-prediction.com
VITE_WS_URL=wss://api.forex-prediction.com